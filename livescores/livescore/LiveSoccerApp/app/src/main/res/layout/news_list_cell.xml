<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/offwhite"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_id"
        android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#fff">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/news_img"
            android:scaleType="fitXY"
            android:layout_marginRight="05dp"

            />

       <TextView
           android:layout_marginLeft="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:textColor="@color/black"
           android:layout_toRightOf="@+id/news_img"

           android:layout_alignParentRight="true"
           android:id="@+id/title"

           />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:30 AM"
            android:textSize="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/news_img"
            android:id="@+id/time"
            android:layout_below="@+id/title"
            />

    </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentRight="true"
        android:background="@color/hr_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:id="@+id/bottem"
        android:gravity="center"
        android:layout_below="@+id/main_id"
        >


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Euope Headline"
    android:textSize="18dp"
    android:textColor="@color/black"
    android:layout_alignParentLeft="true"
    android:id="@+id/type"
    />

<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:id="@+id/new_nav"
    android:layout_alignParentRight="true"
    android:background="@drawable/arraow"
    />
    </RelativeLayout>

</LinearLayout>